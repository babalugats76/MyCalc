<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyCalcActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/calcResult"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:gravity="right"
        android:paddingLeft="@dimen/calc_horizontal_margin"
        android:paddingRight="@dimen/calc_horizontal_margin"
        android:paddingTop="@dimen/calc_vertical_margin"
        android:paddingBottom="@dimen/calc_vertical_margin"
        android:onClick="onValueButtonClick" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calcResult"
        android:layout_marginTop="16dp"
        android:id="@+id/tableLayout"
        android:layout_centerHorizontal="true">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/tableRow1"
            android:gravity="center_horizontal|left">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:id="@+id/button9"
                android:minWidth="@dimen/calc_min_button_width"
                android:minHeight="@dimen/calc_min_button_height"
                android:layout_column="0"
                android:onClick="onValueButtonClick" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:id="@+id/button8"
                android:minWidth="@dimen/calc_min_button_width"
                android:minHeight="@dimen/calc_min_button_height"
                android:layout_column="1"
                android:onClick="onValueButtonClick"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:id="@+id/button7"
                android:minWidth="@dimen/calc_min_button_width"
                android:minHeight="@dimen/calc_min_button_height"
                android:layout_column="2"
                android:onClick="onValueButtonClick"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:id="@+id/buttonPlus"
                android:minWidth="@dimen/calc_min_button_width"
                android:minHeight="@dimen/calc_min_button_height"
                android:layout_column="3"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal|left"
            android:id="@+id/tableRow2">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:id="@+id/button6"
                android:minWidth="@dimen/calc_min_button_width"
                android:minHeight="@dimen/calc_min_button_height"
                android:layout_column="0"
                android:onClick="onValueButtonClick"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:id="@+id/button5"
                android:minWidth="@dimen/calc_min_button_width"
                android:minHeight="@dimen/calc_min_button_height"
                android:layout_column="1"
                android:onClick="onValueButtonClick"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:id="@+id/button4"
                android:minWidth="@dimen/calc_min_button_width"
                android:minHeight="@dimen/calc_min_button_height"
                android:layout_column="2"
                android:onClick="onValueButtonClick"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/buttonMinus"
                android:minWidth="@dimen/calc_min_button_width"
                android:minHeight="@dimen/calc_min_button_height"
                android:layout_column="3"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal|left"
            android:id="@+id/tableRow3">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:id="@+id/button3"
                android:minWidth="@dimen/calc_min_button_width"
                android:minHeight="@dimen/calc_min_button_height"
                android:layout_column="0"
                android:onClick="onValueButtonClick"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:id="@+id/button2"
                android:minWidth="@dimen/calc_min_button_width"
                android:minHeight="@dimen/calc_min_button_height"
                android:layout_column="1"
                android:onClick="onValueButtonClick"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/button1"
                android:minWidth="@dimen/calc_min_button_width"
                android:minHeight="@dimen/calc_min_button_height"
                android:layout_column="2"
                android:onClick="onValueButtonClick"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CE"
                android:id="@+id/buttonClear"
                android:minWidth="@dimen/calc_min_button_width"
                android:minHeight="@dimen/calc_min_button_height"
                android:layout_column="3" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal|left"
            android:id="@+id/tableRow4">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/button0"
                android:minHeight="@dimen/calc_min_button_height"
                android:layout_column="0"
                android:layout_span="2"
                android:onClick="onValueButtonClick"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:id="@+id/buttonDecimal"
                android:minWidth="@dimen/calc_min_button_width"
                android:minHeight="@dimen/calc_min_button_height"
                android:layout_column="1"
                android:onClick="onValueButtonClick"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:id="@+id/buttonEqual"
                android:minWidth="@dimen/calc_min_button_width"
                android:minHeight="@dimen/calc_min_button_height"
                android:layout_column="3" />

        </TableRow>

    </TableLayout>

</RelativeLayout>
